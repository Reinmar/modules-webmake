#!/usr/bin/env node

'use strict';

var argv = require('optimist')
	.usage("Usage: $0 <input> <output>")
	.demand(2)
	.alias('t', 'tpl')
	.describe('t', 'Path to template file')
	.argv
  , writeFile = require('fs').writeFile
  , webmake   = require('../lib/webmake')

  , input = argv._[0], output = argv._[1]
  , tpl = argv.t;

if (input[0] !== '/') {
	input = process.env.PWD + '/' + input;
}
if (output[0] !== '/') {
	output = process.env.PWD + '/' + output;
}

webmake(input, { output: output, templatePath: tpl }, function (err, result) {
	if (err) {
		throw err;
	}
	console.log("...Done");
	process.exit();
});
